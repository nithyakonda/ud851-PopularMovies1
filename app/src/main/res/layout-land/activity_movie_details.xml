<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context="com.udacity.nkonda.popularmovies.moviedetails.MovieDetailsActivity">
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pb_indicator"
        android:layout_gravity="center"
        style="@style/Base.TextAppearance.AppCompat.Large"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/content_layout"
        android:orientation="horizontal"
        android:visibility="invisible">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/iv_poster"
            android:layout_weight="1"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="15dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_original_title"
                        app:autoSizeTextType="uniform"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        tools:text="@string/movie_details_original_title_label"/>

                    <app.youkai.placeholdertextview.PlaceholderTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_release_date"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        app:ptv_placeholderColor="@color/placeholder_text"
                        app:ptv_sampleText="@string/movie_details_release_date_label"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="5dp"
                    android:src="@android:drawable/star_big_off"
                    android:tint="@android:color/holo_orange_dark"/>

                <app.youkai.placeholdertextview.PlaceholderTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/tv_rating"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    tools:text="@string/movie_details_rating_label"/>

                <app.youkai.placeholdertextview.PlaceholderTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    tools:text="@string/movie_details_max_rating_label"/>
            </LinearLayout>

            <app.youkai.placeholdertextview.PlaceholderTextView
                android:id="@+id/tv_plot_synopsis"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:scrollbars="vertical"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                app:ptv_placeholderColor="@color/placeholder_text"
                app:ptv_sampleText="@string/movie_details_plot_synopsis_label"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>